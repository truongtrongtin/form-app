<% include ./partials/header %>
<body>
<div class="container-fluid bg-light py-3">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card card-body">
          <h3 class="text-center mb-4">Signup Form</h3>
          <form action="/" method="POST">
              <div class="form-group">
                <label for="email">Email
                  <% if (errors.email) { %>
                    <span class='alert-danger'><%= errors.email.msg %></span>
                  <% } %>
                </label>
                <input id="email" class="form-control input-lg" placeholder="Enter Email" name="email" type="text">
              </div>
              <div class="form-group">
                <label for="password">Password
                  <% if (errors.password) { %>
                    <span class='alert-danger'><%= errors.password.msg %></span>
                  <% } %>
                </label>
                <input id="password" class="form-control input-lg" placeholder="Enter Password" name="password" type="password">
              </div>
              <div class="form-group">
                <label for="confirm-pw">Repeat Password
                  <% if (errors.repassword) { %>
                    <span class='alert-danger'><%= errors.repassword.msg %></span>
                  <% } %>
                </label>
                <input id="confirm-pw" class="form-control input-lg" placeholder="Repeat Password" name="repassword" type="password">
              </div>
              <div class="form-group">
                <label for="full-name">Full Name
                  <% if (errors.name) { %>
                    <span class='alert-danger'><%= errors.name.msg %></span>
                  <% } %>
                </label>
                <input id="full-name" class="form-control input-lg" placeholder="Full Name" name="name" type="text">
              </div>
              <div class="form-group">
                <label for="address">Address</label>
                <input id="address" class="form-control input-lg" placeholder="Address" name="address" type="text">
              </div>
              <div class="form-check">
                <input type="checkbox" class="form-check-input" id="remember">
                <label class="form-check-label" for="remember">Remember me</label>
              </div>
              <div class="form-group">
                <label class="small">By creating an account you agree to our <a href="#">Terms & Privacy</a></label>
              </div>
              <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" value="Sign Me Up" type="submit">
              </div>
            </form>
      </div>
    </div>
  </div>
</div>
</body>
</html>